<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>ATB Bank Dashboard</title>
    <style>
        .tabs {
            display: flex;
            cursor: pointer;
        }
        .tab {
            flex: 1;
            padding: 10px;
            text-align: center;
            background: #f1f1f1;
            border: 1px solid #ccc;
            margin-right: 5px;
        }
        .tab-content {
            display: none;
            padding: 20px;
            border: 1px solid #ccc;
            margin-top: -1px;
        }
        .active-tab {
            background: #fff;
            border-bottom: none;
        }
        .active-content {
            display: block;
        }
        .add-button, .modify-button, .delete-button, .email-button {
            margin-top: 10px;
            padding: 10px 15px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
        .modify-button {
            background-color: #FFA500;
        }
        .delete-button {
            background-color: #f44336;
        }
        .email-button {
            background-color: #008CBA;
        }
        .list-item {
            border: 1px solid #ccc;
            padding: 10px;
            margin-top: 10px;
            border-radius: 5px;
        }
        .list-item button {
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <nav>
        <h1>ATB Bank Admin Portal</h1>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/login">Logout</a></li>
        </ul> 
    </nav>
    <div class="container mt-4">
        <h2>Welcome, {{username}}</h2>
        <div class="tabs">
            <div class="tab" onclick="showContent('stagiaire')">Espace Stagiaire</div>
            <div class="tab" onclick="showContent('encadrant')">Espace Encadrant</div>
            <div class="tab" onclick="showContent('chef')">Espace Chef de Département</div>
        </div>
        <div id="stagiaire" class="tab-content active-content">
            <h3>Espace Stagiaire</h3>
            <a href="/add-stagiaire" class="add-button">+ Add Stagiaire</a>
            <div class="list">
                {{#each stagiaires}}
                    <div class="list-item">
                        <strong>Name:</strong> {{this.name}}<br>
                        <strong>Age:</strong> {{this.age}}<br>
                        <strong>Encadrant:</strong> {{this.encadrant_name}}<br>
                        <strong>Email:</strong> {{this.email}}
                        <button class="modify-button" onclick="modifyStagiaire({{this.id}})">Modify</button>
                        <button class="delete-button" onclick="deleteStagiaire({{this.id}})">Delete</button>
                        <button class="email-button" onclick="sendEmailToEncadrant({{this.id}})">Send Email</button>
                    </div>
                {{/each}}
            </div>


        </div>
        <div id="encadrant" class="tab-content">
            <h3>Espace Encadrant</h3>
            <a href="/add-encadrant" class="add-button">+ Add Encadrant</a>
            <div class="list">
                {{#each encadrants}}
                    <div class="list-item">
                        <strong>Name:</strong> {{this.name}}<br>
                        <strong>Age:</strong> {{this.age}}<br>
                        <strong>Email:</strong> {{this.email}}<br>
                        <strong>Department:</strong> {{this.departement}}<br>
                        <strong>Phone:</strong> {{this.numtel}}
                        <button class="modify-button" onclick="modifyEncadrant({{this.id}})">Modify</button>
                        <button class="delete-button" onclick="deleteEncadrant({{this.id}})">Delete</button>
                    </div>
                {{/each}}
            </div>
        </div>
        <div id="chef" class="tab-content">
            <h3>Espace Chef de Département</h3>
            <a href="/add-chef" class="add-button">+ Add Chef de Département</a>
            <div class="list">
                {{#each chefs}}
                    <div class="list-item">
                        <strong>Name:</strong> {{this.name}}<br>
                        <strong>Age:</strong> {{this.age}}<br>
                        <strong>Email:</strong> {{this.email}}<br>
                        <strong>Department:</strong> {{this.department}}<br>
                        <strong>Phone:</strong> {{this.numtel}}
                        <button class="modify-button" onclick="modifyChef({{this.id}})">Modify</button>
                        <button class="delete-button" onclick="deleteChef({{this.id}})">Delete</button>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
    <script>
        function showContent(id) {
            const contents = document.querySelectorAll('.tab-content');
            const tabs = document.querySelectorAll('.tab');

            contents.forEach(content => {
                content.classList.remove('active-content');
            });

            tabs.forEach(tab => {
                tab.classList.remove('active-tab');
            });

            document.getElementById(id).classList.add('active-content');
            event.target.classList.add('active-tab');
        }

        function modifyStagiaire(id) {
            window.location.href = `/modify-stagiaire/${id}`;
        }

        function deleteStagiaire(id) {
            if (confirm('Are you sure you want to delete this stagiaire?')) {
                window.location.href = `/delete-stagiaire/${id}`;
            }
        }

        function modifyEncadrant(id) {
            window.location.href = `/modify-encadrant/${id}`;
        }

        function deleteEncadrant(id) {
            if (confirm('Are you sure you want to delete this encadrant?')) {
                window.location.href = `/delete-encadrant/${id}`;
            }
        }

        function modifyChef(id) {
            window.location.href = `/modify-chef/${id}`;
        }

        function deleteChef(id) {
            if (confirm('Are you sure you want to delete this chef?')) {
                window.location.href = `/delete-chef/${id}`;
            }
        }

        function sendEmailToEncadrant(id) {
            window.location.href = `/send-email-to-encadrant/${id}`;
        }
    </script>
</body>
</html>
